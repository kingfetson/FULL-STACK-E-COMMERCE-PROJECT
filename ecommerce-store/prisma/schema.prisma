generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  total      Float
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
  items      OrderItem[]
}

model Customer {
  id      String  @id @default(cuid())
  name    String
  email   String
  address String
  orders  Order[]
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  productId String
  name      String
  price     Float
  quantity  Int
}